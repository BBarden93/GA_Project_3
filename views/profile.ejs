<div class="page-header">
    <h3><%=user.name %></h3>
</div>
<div class="row">
    <div class="well">
        <p>
            <strong>email</strong>: <%= user.email %>            
        </p>              
    </div>
</div>
<div>
    <img class = "profile-pic" src="http://www.clker.com/cliparts/B/R/Y/m/P/e/blank-profile-hi.png" alt="profile pic" height="180" width="165" />
</div>

<% user.images.forEach((id) => { %>
    <img src="<%= id.url %>" alt="" srcset="">
    <p><%= id.location %></p>
<% }) %>

<% if(loggedIn) { %>
    <form action="/users/edit" method="GET">
    <button class="btn btn-info" id="bl-btn"type="submit">Edit Profile</button>
    </form>
<% } %>