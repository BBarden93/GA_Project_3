<h2><%= image.location %></h2>


<img class="d-block w-100" src="<%= image.url %>" alt="First slide">
    
<div class="row secondrow">
    <div class="card" id="show-card" style="width: 12rem;">
      <%if(data.weather[0].icon === "09d" || data.weather[0].icon === "09n"){%>
        <img class="card-img-top" class="weather-icon" src="http://moziru.com/images/moon-clipart-weather-symbol-19.png" alt="Cloudy Rainy">                   
  
      <%}else if(data.weather[0].icon === "10d"){%>
          <img class="card-img-top" class="weather-icon" src="https://lh3.googleusercontent.com/xySIYhsYAzNn_oGy0ae6pvhwK87Hstqa8FJ3UhiQEgFT7GTvfNr9lCpKl6nxdPB-TYY=w300" alt="Day Rain">                    
      <%}else if(data.weather[0].icon === "10n"){%>
        <img class="card-img-top" class="weather-icon" src="https://cdn4.iconfinder.com/data/icons/iconsland-weather/PNG/256x256/Night_Rain.png" alt="Night Rain">                        
      
      <%}else if(data.weather[0].icon === "01n"){%>
        <img class="card-img-top" class="weather-icon" src="https://cdn130.picsart.com/233614414043212.png" alt="Moonay">                  
      <%}else if(data.weather[0].icon === "01d"){%>
          <img class="card-img-top" class="weather-icon" src="https://openclipart.org/image/800px/svg_to_png/170678/sunny.png" alt="Sunnay">                        

      <%}else if(data.weather[0].icon === "02d"){%>
        <img class="card-img-top" class="weather-icon" src="http://downloadicons.net/sites/default/files/sunny-to-partly-cloudy-symbol-icon-38701.png" alt="Sun behind clouds">                  
      <%}else if(data.weather[0].icon === "02n"){%>
        <img class="card-img-top" class="weather-icon" src="http://pngimages.net/sites/default/files/night-cloudy-png-image-9933.png" alt="Sun behind clouds">                  
        
      <%}else if(data.weather[0].icon === "03d" || data.weather[0].icon === "03n"){%>
        <img class="card-img-top" class="weather-icon" src="http://pluspng.com/img-png/png-internet-cloud-internet-cloud-icon-png-480.png" alt="Clouday">                   

      <%}else if(data.weather[0].icon === "04d" || data.weather[0].icon === "04n"){%>
        <img class="card-img-top" class="weather-icon" src="http://www.blumenriviera.co.uk/images/weather/broken_clouds_day.png" alt="Broken Clouds">                   
      
      <%}else if(data.weather[0].icon === "13d" || data.weather[0].icon === "13n"){%>
        <img class="card-img-top" class="weather-icon" src="https://bloximages.newyork1.vip.townnews.com/mooresvilletribune.com/content/tncms/assets/v3/editorial/b/08/b08c9089-291a-59e9-80f4-96e3ddbcf5e2/5a2967c629954.image.png" alt="Snoway">
      <%}%>
      <div class="card-body">
        <p class="card-text" id="city-temperature">Current Temperature: <%= Math.round(data.main.temp) %> F </p>
        <p class="card-text" id="city-humidity"> Humidity: <%= data.main.humidity %> %</p>
      </div>
    </div>
    <div id="mapFrame">
      <iframe
        width="450"
        height="300"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=<%= apiKey2 %>&q=<%= location %>" allowfullscreen>   
      </iframe>
    </div>
  </div>

    <% if(loggedIn) { %>

    <form action="/images/<%= image.id%>/add" method="POST">
      <button class="btn btn-info"type="submit">Add to Bucket List</button><span id="edit-btn"><a href="/images/<%= image.id%>/edit">Edit</a></span>
    <form action="/images/<%= image.id %>/delete?_method=DELETE" method="POST">
        <button class="btn btn-info ">Delete</button>
      <% } %>
    </form>
    </form>
      
  




